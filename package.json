{
  "name": "fatefi",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter @fatefi/api dev",
    "dev:web": "pnpm --filter @fatefi/web dev",
    "dev": "pnpm dev:api & pnpm dev:web",
    "build": "pnpm run --parallel build:api build:web",
    "build:api": "pnpm --filter @fatefi/api build",
    "build:web": "pnpm --filter @fatefi/web build"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  }
}